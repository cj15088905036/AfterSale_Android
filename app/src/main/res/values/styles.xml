<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mystyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999</item>
    </style>

    <style name="uploading">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="repairlist">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="repairlistmessage">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#000</item>
    </style>



    <style name="repairproduct">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="shaixuan">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DateTime" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置dialog不全屏-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--去除title-->
        <item name="android:windowContentOverlay">@null</item>
        <!--去除背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="customerName">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--添加设备信息自定义样式-->
    <style name="sbmessage.show">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="sbmessage">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="basefragment_text_type1">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999</item>
    </style>
    <style name="basefragment_text_type2">
        <item name="android:textColor">#333</item>
    </style>

    <style name="save_data">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="new_after_sale_style">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="product_record1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#aaa</item>
    </style>

    <style name="product_record2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="popwindow_delete_btn_anim_style">
        <item name="android:windowEnterAnimation">@anim/delete_btn_show</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/delete_btn_hide</item>
        <!-- 指定消失的动画xml -->

    </style>


    <style name="MySwipeCell" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="main_menu_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/first_color</item>
    </style>
</resources>