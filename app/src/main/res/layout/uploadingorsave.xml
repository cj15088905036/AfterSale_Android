<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/new_soft"
        >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow"
            />

        <TextView
            android:id="@+id/textView"
            style="@style/mystyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设备维修信息"
            android:textColor="#fff"
            android:textSize="16dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="维  修 人 员："
            />

        <TextView
            android:id="@+id/tvRepairName"
            style="@style/uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="录  入 时 间："
            />

        <TextView
            android:id="@+id/tvDate"
            style="@style/uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tv_list"
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="产品系列号："
            />

        <TextView
            android:id="@+id/tvList"
            style="@style/uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_list"
            android:minWidth="140dp"
            />

        <Button

            android:id="@+id/btn_select"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/new_click_down"
            android:text="查询"
            android:textColor="#fff"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="产    品   名："
            />

        <MultiAutoCompleteTextView
            android:id="@+id/mtvPro_Name"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="输入产品全称第一个字"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="车    牌   号："
            />

        <EditText
            android:id="@+id/etVehCode"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="只填写一辆车的车牌号或者自编号"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView

            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:text="故 障 原 因："
            />

        <EditText
            android:id="@+id/etFaultcause"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="若发现同一批次的车有相同的故障原因，请上报"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:text="维 修 结 果："
            />

        <EditText
            android:id="@+id/etMaintResult"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView

            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="材    料   费："
            />


        <EditText
            android:id="@+id/etMaterialCost"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="维     修  费："
            />

        <EditText
            android:id="@+id/etMaintenanceCost"
            style="@style/uploading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/mystyle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="维 修 备 注："/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnSubmit"
            style="@style/mystyle"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/uploading_click_down"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/btnSave"
            style="@style/mystyle"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/new_click_down"
            android:text="保存信息"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/btnLook"
            style="@style/mystyle"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/click_down"
            android:text="维修记录"
            android:textColor="#fff"
            android:textSize="14dp"
            />


    </LinearLayout>


</LinearLayout>