<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:id="@+id/ll_install"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical"-->
    <!--android:visibility="gone">-->

    <LinearLayout
        android:id="@+id/rl_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_install_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn_install_remark"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/new_click_down"
            android:text="添加/修改\r\n订单备注"
            android:textColor="#fff" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_seek_plateNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_veh_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="输入车牌号查询" />

        <Button
            android:id="@+id/btn_seek_veh"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/new_click_down"
            android:text="查询"
            android:textColor="#fff" />

    </LinearLayout>
    <!--</LinearLayout>-->

    <ListView
        android:id="@+id/lv_specific_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:divider="#cbcdcf"


        android:scrollbars="none" />
    <!--android:drawSelectorOnTop="true"-->
    <!--android:listSelector="@drawable/listview_selector"-->


</LinearLayout>