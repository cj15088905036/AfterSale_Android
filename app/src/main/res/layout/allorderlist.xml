<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/list_view_shape"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:background="#fafbfb">

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="订单类型"
                android:textColor="#333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="订单状态"
                android:textColor="#39af60"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/new_after_sale_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订  单  号:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#666"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ll_date_normal_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_first_shape"
                android:gravity="center"
                android:text="1"
                android:textColor="#39af60" />

            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_shape"
                android:gravity="center"
                android:text="2"
                android:textColor="#39af60" />

            <TextView
                android:id="@+id/tv_date3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_shape"
                android:gravity="center"
                android:text="3"
                android:textColor="#39af60" />

            <TextView
                android:id="@+id/tv_date4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_shape"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/time" />

            <TextView
                android:id="@+id/tv_date5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_shape"
                android:gravity="center"
                android:text="5"
                android:textColor="#39af60" />

            <TextView
                android:id="@+id/tv_date6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_shape"
                android:gravity="center"
                android:text="6"
                android:textColor="#39af60" />

            <TextView
                android:id="@+id/tv_date7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_date_last_shape"
                android:gravity="center"
                android:text="7"
                android:textColor="#39af60" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                style="@style/new_after_sale_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:" />

            <TextView
                android:id="@+id/tv_time_single"
                style="@style/new_after_sale_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/new_after_sale_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间:" />

            <TextView
                android:id="@+id/tv_time_deadline"
                style="@style/new_after_sale_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:minHeight="70dp">

            <LinearLayout
                android:id="@+id/LiMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/new_after_sale_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客        户:" />

                    <TextView
                        android:id="@+id/tv_customer_name"
                        style="@style/new_after_sale_style"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/new_after_sale_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联  系  人:"

                        />

                    <TextView
                        android:id="@+id/tv_customer_person"
                        style="@style/new_after_sale_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/new_after_sale_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式:" />

                    <TextView
                        android:id="@+id/tv_customer_personphone"
                        style="@style/new_after_sale_style"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/new_after_sale_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="维修地点:" />

                    <TextView

                        android:id="@+id/tv_customer_address"
                        style="@style/new_after_sale_style"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_scan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/code"
                        android:focusable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="扫描设备条形码"
                        android:textColor="#999"
                        android:textSize="8sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/btn_grab_one"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@color/new_soft"
                    android:focusable="false"
                    android:text="抢单"
                    android:textColor="#fff" />

                <LinearLayout
                    android:id="@+id/ll_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/add_product"
                        android:focusable="false"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/tv_addOrInstall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#999"
                        android:textSize="10sp" />
                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <TextView
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="派   单  员:" />

                <TextView
                    android:id="@+id/tv_order_singler"
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <TextView
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="phone"
                    android:text="联 系方式:" />

                <TextView
                    android:id="@+id/tv_singler_phone"
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_order_remark_hint"
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="维 修备注:" />

                <TextView
                    android:id="@+id/tv_order_remark"
                    style="@style/new_after_sale_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!-- <LinearLayout
         android:layout_width="wrap_content"
         android:gravity="center"
         android:layout_height="match_parent">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="测试"

             />
     </LinearLayout>-->
    <!--</LinearLayout>-->
</LinearLayout>