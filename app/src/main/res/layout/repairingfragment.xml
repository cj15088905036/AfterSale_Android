<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_show_repairMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在获取维修单信息"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_show_installMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在获取安装调试单信息"
        android:textColor="#000"
        android:textSize="15sp"/>


        <com.mapsoft.aftersale.utils.MyRefreshListView
            android:id="@+id/lv_repairing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:divider="#cbcdcf"
            android:scrollbars="none"
            />





</LinearLayout>