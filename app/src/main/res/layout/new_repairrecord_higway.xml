<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/list_view_shape"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/tv_order_type"-->
        <!--style="@style/product_record2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:hint="订单类型"-->
        <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:"
                />

            <TextView
                android:id="@+id/tv_order_code"
                style="@style/product_record2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单完成时间:"
                />

            <TextView
                android:id="@+id/tv_time_complete"
                style="@style/product_record2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="客户地址:"
                />

            <TextView
                android:id="@+id/tv_customer_address"
                style="@style/product_record2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称:"
                />

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/product_record2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车  牌  号:"
                />

            <TextView
                android:id="@+id/tv_car_number"
                style="@style/product_record2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="故障原因:"
                    />

                <TextView
                    android:id="@+id/tv_fault_cause"
                    style="@style/product_record2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="维修结果:"
                    />

                <TextView
                    android:id="@+id/tv_result_maint"
                    style="@style/product_record2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIM卡 号:"/>

                <TextView
                    android:id="@+id/tv_product_sim"
                    style="@style/product_record2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="安装地址:"
                    />

                <TextView
                    android:id="@+id/tv_install_address"
                    style="@style/product_record2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安装时间:"/>

                <TextView
                    android:id="@+id/tv_install_time"
                    style="@style/product_record2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修人员:"/>

            <TextView
                android:id="@+id/tv_order_engineer"
                style="@style/product_record2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

            <TextView
                style="@style/product_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修次数:"
                />

            <TextView
                android:id="@+id/tv_maint_number"
                style="@style/product_record2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>