<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"


    >

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="暂时没有任何未派单数据"
        android:textColor="#000"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_grab_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在获取未派单的维修单"
        android:textColor="#000"
        android:textSize="15sp"

        />

    <TextView
        android:id="@+id/tv_grab_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在获取未派单的安装调试单单"
        android:textColor="#000"
        android:textSize="15sp"
        />

    <com.mapsoft.aftersale.utils.MyRefreshListView
        android:id="@+id/lv_grab_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:divider="#cbcdcf"
        android:scrollbars="none"
        >
    </com.mapsoft.aftersale.utils.MyRefreshListView>
</LinearLayout>